<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBinding1925597.MainPage"
             xmlns:local="clr-namespace:DataBinding1925597">
    <ContentPage.BindingContext>
        <local:Alumno/>
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Entry Placeholder="Ingrese su nombre" Text="{Binding Nombre}" x:Name="NombreAlumno" />
            <Label Text="{Binding MostrarNombre}"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
